{
  "compilerOptions": {
    "paths": {
      "@screens/*": ["./src/screens/*"],
      "@components/*": ["./src/components/*"]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": ["src", "ReactotronConfig.ts", "reactotronTypes.d.ts"]
}
